<%= simple_form_for [:admin, @job ] do |f| %>

<div class="container">
<div class="col-md-8" style="margin-left:155px">
  <div class="form-area">
      <form role="form">
        <br style="clear:both">
          <h1 style="margin-bottom: 25px; text-align: center;">Edit A JOB</h1>
            <div class="form-group">
<%= f.input :title %>
<%= f.input :description %>
<%= f.input :wage_lower_bound, :label => "薪资下限" %>
<%= f.input :wage_upper_bound, :label => "薪资上限" %>
<%= f.input :contact_email %>
<%= f.input :is_hidden %>

  <%= f.submit "Submit", :class => "btn pull-right"%>
            </div>
       </form>
   </div>
</div>
</div>


<% end %>
